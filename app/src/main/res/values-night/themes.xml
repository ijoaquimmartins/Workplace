<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Workplace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_main_dark</item>
        <item name="colorPrimaryVariant">@color/color_main_dark</item>
        <item name="colorOnPrimary">@color/color_back_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_main_dark</item>
        <item name="colorSecondaryVariant">@color/color_main_dark</item>
        <item name="colorOnSecondary">@color/color_back_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
      <!--  <item name="android:textColor">#000000</item> -->
    </style>
    <style name="Theme.Workplace.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Workplace.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.Workplace.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>