<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_back"
    tools:context=".MainActivity"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refreshLayout">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:scrollbars="vertical">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/round_corners"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:clipToPadding="false">

                            <TextView
                                android:id="@+id/txtLblUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name:-  "
                                android:textStyle="bold|italic"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/txtLblUserEmployeeID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txtLblUsername"
                                android:text="Email ID:-  "
                                android:textStyle="bold|italic"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/txtLblDesignation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txtLblUserEmployeeID"
                                android:text="Mobile No:-  "
                                android:textStyle="bold|italic"
                                android:textSize="20sp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:clipToPadding="false">

                            <TextView
                                android:id="@+id/txtUserFullName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User Full Name "
                                android:textStyle="italic"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/txtEmailID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txtUserFullName"
                                android:text="Email ID "
                                android:textStyle="italic"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/txtMobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txtEmailID"
                                android:text="Mobile No "
                                android:textStyle="italic"
                                android:textSize="20sp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_marginTop="10dp"/>
                <RelativeLayout
                    android:id="@+id/RlMarquee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false">
                    <TextView
                        android:id="@+id/marqueeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scrollHorizontally="true"
                        android:layout_margin="16sp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="#990000"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:clipChildren="false"
                        android:clipToPadding="false"/>
                </RelativeLayout>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/fireworkAnimation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_rawRes="@raw/firework"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:visibility="gone"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_marginTop="10dp"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/layout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    app:justifyContent="center"
                    app:flexWrap="wrap">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false">
                        <Button
                            android:id="@+id/btnAttendance"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_attendance"
                            android:text="@string/attendance"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false">
                        <Button
                            android:id="@+id/btnApply"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_apply"
                            android:text="@string/apply"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false">
                        <Button
                            android:id="@+id/btnDailyWork"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_dailywork"
                            android:text="@string/work"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </com.google.android.flexbox.FlexboxLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/layout_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    app:justifyContent="center"
                    app:flexWrap="wrap">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">
                        <Button
                            android:id="@+id/btnEmployee"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_employee"
                            android:text="@string/employee"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">
                        <Button
                            android:id="@+id/btnHoliday"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_holiday"
                            android:text="@string/holiday"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">
                        <Button
                            android:id="@+id/btnLeaves"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_leave"
                            android:text="@string/leaves"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </com.google.android.flexbox.FlexboxLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/layout_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    app:justifyContent="center"
                    app:flexWrap="wrap">
                    <RelativeLayout
                        android:id="@+id/badge_layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">
                        <RelativeLayout
                            android:id="@+id/layApprove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:clipToPadding="false">
                            <Button
                                android:id="@+id/btnApprove"
                                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/ic_approve"
                                android:text="@string/approve"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:visibility="gone"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/badge_notification_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/layApprove"
                            android:background="@drawable/badge_item_count"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="visible"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">
                        <Button
                            android:id="@+id/btnAttenDetails"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_attendetails"
                            android:text="@string/attendetails"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <Button
                            android:id="@+id/btnLeaveDetails"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_leavedetails"
                            android:text="@string/leavedetails"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <Button
                            android:id="@+id/btnWorkDetails"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_workdetails"
                            android:text="@string/workdetails"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">
                        <Button
                            android:id="@+id/btnInOutTime"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_time"
                            android:text="@string/inouttime"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </RelativeLayout>

                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:id="@+id/tvAttnLeaveList"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Attendance and Leave List "
                                android:textSize="16sp"
                                android:textStyle="bold|italic"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="Date"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="italic"
                                android:textSize="10sp"
                                android:text="  Tap on date to change"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:text="LATE"
                                android:textColor="@color/darkred"
                                android:layout_marginEnd="10dp"
                                android:textStyle="bold|italic"
                                app:drawableStartCompat="@drawable/ic_late" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:text="ON TIME"
                                android:textColor="@color/darkgreen"
                                android:layout_marginEnd="10dp"
                                android:textStyle="bold|italic"
                                app:drawableStartCompat="@drawable/ic_ontime" />
                        </LinearLayout>
                        <ListView
                            android:id="@+id/lvEmployeeList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:scrollbars="vertical"/>
                    </LinearLayout>
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>